<div ng-controller="app.views.arInvoices.index as vm">
    <div class="row">
        <div class="col-md-12">
            
            <button class="btn btn-danger pull-right" type="submit"><i class="fa fa-optin-monster"></i> Some Option</button>
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Filter <a class="btn btn-box-tool" href="#/salesInvoices/addNew" title="Add new sales invoice"><i class="fa fa-plus"></i> Add New</a></h3>
                    
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Customer</label>
                                <select class="form-control select2" style="width: 100%;">
                                    <option selected="selected">John Doe</option>
                                    <option>James Blunt</option>
                                    <option>Mick Foley</option>
                                    <option>Mike Epps</option>
                                    <option>Wes Stewart</option>
                                    <option>Avram Grant</option>
                                    <option>Alex Fergie</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Item Code</label>
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button class="btn btn-info" type="submit">Search</button>
                </div>
            </div>
            
            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Business Partner</th>
                        <th>Invoiced Date</th>
                        <th>Amount</th>
                        <th>View</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="invoice in vm.salesInvoices">
                        <td>{{invoice.id}}</td>
                        <td>{{invoice.businessPartner.cardName}}</td>
                        <td>{{invoice.creationTime | date}}</td>
                        <td>{{invoice.totalAmount | currency: "N "}}</td>
                        <td><a class="btn btn-sm btn-info" ng-href="#/salesInvoices/{{invoice.id}}" title="View details"><i class="fa fa-arrow-circle-right"></i> Details</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>