<div ng-controller="app.views.goodsReceipts.index as vm">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Filter <a class="btn btn-box-tool" href="#/goodsReceipts/addNew" title="Raise new receipt"><i class="fa fa-plus"></i> New Receipt</a></h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Customer</label>
                        <select class="form-control select2" style="width: 100%;">
                            <option selected="selected">John Doe</option>
                            <option>James Blunt</option>
                            <option>Mick Foley</option>
                            <option>Mike Epps</option>
                            <option>Wes Stewart</option>
                            <option>Avram Grant</option>
                            <option>Alex Fergie</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Doc Num</label>
                        <input type="text" ng-model="filter" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <button class="btn btn-info" type="submit">Search</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @*<button class="btn btn-danger pull-right" type="submit"><i class="fa fa-optin-monster"></i> Some Option</button>*@
            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Business Partner</th>
                        <th>Receipt Date</th>
                        <th>Amount</th>
                        <th>View</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="receipt in vm.goodsReceipts">
                        <td>{{receipt.id}}</td>
                        <td>{{receipt.businessPartner.cardName}}</td>
                        <td>{{receipt.creationTime | date}}</td>
                        <td>{{receipt.amount | currency: "N "}}</td>
                        <td><a class="btn btn-sm btn-info" ng-href="#/goodsReceipts/{{receipt.id}}" title="View details"><i class="fa fa-arrow-circle-right"></i> Details</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
