<div ng-controller="app.views.sales.addARInvoice as vm">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Customer Information</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Business Partner</label>
                                <select class="form-control select2" ng-model="vm.salesInvoice.cardCode" ng-options="x.id as x.cardName for x in vm.businessPartners" name="CardCode" style="width: 100%;">
                                    <option value="0">Select Business Partner</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Document Number</label>
                                <input type="text" class="form-control" name="DocNum" ng-model="vm.salesInvoice.docNum" placeholder="Enter Document Number" />
                            </div>
                            
                            
                            @*<div class="col-md-2">Ref Code</div>
                            <div class="col-md-10">
                                <input type="text" class="form-control" />
                            </div>*@
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Status</label>
                                <input type="text" class="form-control" value="Open" disabled />
                            </div>
                            <div class="form-group">
                                <label>Contact Person</label>
                                <input type="text" name="ContactPerson" ng-model="vm.salesInvoice.contactPerson" class="form-control" placeholder="Enter Contact Person's Name'" />
                            </div>
                            
                            @*<div class="col-md-2">Due Date</div>
                            <div class="col-md-10">
                                <input type="date" class="form-control" />
                            </div>*@
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Remarks</label>
                                <textarea class="form-control" rows="3" name="Remarks" ng-model="vm.salesInvoice.remarks" placeholder="Additional statment"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Line Items</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <form ng-submit="addNew()">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th><input type="checkbox" ng-model="selectedAll" ng-click="checkAll()" /></th>
                                        <th>Row No</th>
                                        <th>Item No</th>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Line Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="lineItem in lineItems">
                                        <td><input type="checkbox" ng-model="lineItem.selected"/></td>
                                        <td>{{lineItem.rowNumber}}</td>
                                        <td>
                                            <select class="form-control" ng-model="lineItem.item" ng-options="item as item.itemCode for item in vm.items" name="ItemCode" style="width: 100%;">
                                                <option value="0">Select Item</option>
                                            </select>
                                        </td>
                                        
                                        <td><input type="text" class="form-control" ng-model="lineItem.item.itemName"  required /></td>
                                        <td><input type="number" class="form-control" ng-model="lineItem.quantity" required /></td>
                                        <td><input type="number" class="form-control" ng-model="lineItem.item.unitPrice"  required /></td>
                                        <td><span ng-model="lineItem.lineTotal">{{getLineTotal(lineItem)}}</span></td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="form-group">
                                <input ng-hide="!lineItems.length" type="button" class="btn btn-danger pull-right" ng-click="remove()" value="Remove">
                                <input type="submit" class="btn btn-primary addnew pull-right" value="Add New">
                            </div>
                        </form>
                        @*<h3>
                            lineItems data:
                        </h3>
                        <pre>{{lineItems|json}}</pre>*@
                    </div>
                </div>
            </div>
            <div class="box box-danger">
                <div class="box-body">
                    <div class="row pull-right">
                        <div class="col-md-5">
                            Total:
                        </div>
                        <div class="col-md-5">
                            <span ng-model="vm.salesInvoice.totalAmount">{{getTotal()}}</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-9">
                    <input id="btnSave" ng-disabled="newBizPartnerForm.$invalid" ng-click="vm.save()" class="btn btn-sm btn-primary btn-flat pull-left" type="submit" value="Save" />
                    <a href="#/customers" class="btn btn-sm btn-default btn-flat pull-left">Close</a>
                </div>
            </div>
        </div>
    </div>
</div>
