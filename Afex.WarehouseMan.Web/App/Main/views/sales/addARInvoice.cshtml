<div ng-controller="app.views.sales.addARInvoice as vm">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Customer Information</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="col-md-2">Customer</div>
                            <div class="col-md-10">
                                <select class="form-control select2" ng-model="vm.arInvoice.cardCode" name="CardCode" style="width: 100%;">
                                    <option selected="selected">John Doe</option>
                                    <option>James Blunt</option>
                                    <option>Mick Foley</option>
                                    <option>Mike Epps</option>
                                    <option>Wes Stewart</option>
                                    <option>Avram Grant</option>
                                    <option>Alex Fergie</option>
                                </select>
                            </div>
                            <div class="col-md-2">Document Number</div>
                            <div class="col-md-10">
                                <input type="text" class="form-control" name="DocNum" ng-model="vm.arInvoice.docNum" />
                            </div>
                            <div class="col-md-2">Contact Person</div>
                            <div class="col-md-10">
                                <input type="text" class="form-control" />
                            </div>
                            @*<div class="col-md-2">Ref Code</div>
                            <div class="col-md-10">
                                <input type="text" class="form-control" />
                            </div>*@
                        </div>
                        <div class="col-md-6">
                            <div class="col-md-2">Status</div>
                            <div class="col-md-10">
                                <input type="text" class="form-control" value="Open" disabled />
                            </div>
                            <div class="col-md-2">Posting Date</div>
                            <div class="col-md-10">
                                <input type="date" class="form-control"  />
                            </div>
                            @*<div class="col-md-2">Due Date</div>
                            <div class="col-md-10">
                                <input type="date" class="form-control" />
                            </div>*@
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Line Items</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <form ng-submit="addNew()">
                            <table class="table table-striped table-bordered" style="width: 90%">
                                <thead>
                                    <tr>
                                        <th><input type="checkbox" ng-model="selectedAll" ng-click="checkAll()" /></th>
                                        <th>Item No</th>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Line Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="lineItem in lineItems">
                                        <td><input type="checkbox" ng-model="lineItem.selected"/></td>
                                        <td><input type="text" class="form-control" ng-model="lineItem.itemNo"  required /></td>
                                        <td><input type="text" class="form-control" ng-model="lineItem.product" required /></td>
                                        <td><input type="number" class="form-control" ng-model="lineItem.quantity" required /></td>
                                        <td><input type="number" class="form-control" ng-model="lineItem.unitPrice" required /></td>
                                        <td><span ng-model="lineItem.lineTotal">{{lineItem.quantity * lineItem.unitPrice }}</span></td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="form-group">
                                <input ng-hide="!lineItems.length" type="button" class="btn btn-danger pull-right" ng-click="remove()" value="Remove">
                                <input type="submit" class="btn btn-primary addnew pull-right" value="Add New">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="box box-danger">
                <div class="box-body">
                    <div class="row pull-right">
                        <div class="col-md-5">
                            Total:
                        </div>
                        <div class="col-md-5">
                            {{totalAmount}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
