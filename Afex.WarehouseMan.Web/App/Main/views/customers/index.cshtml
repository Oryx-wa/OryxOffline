<div ng-controller="app.views.customers.index as vm">
    <div class="row">
        <div class="col-md-12">

            <button class="btn btn-danger pull-right" type="submit"><i class="fa fa-optin-monster"></i> Some Option</button>
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Filter <a class="btn btn-box-tool" href="#/customers/newCustomer" title="Add new customer"><i class="fa fa-plus"></i> Add New</a></h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="span12">
                            <form id="custom-search-form" class="form-search form-horizontal pull-right">
                                <div class="input-append span12">
                                    <input type="text" class="search-query mac-style" placeholder="Search">
                                    <button type="submit" class="btn"><i class="icon-search"></i></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                @*<div class="box-footer">
                    <button class="btn btn-info" type="submit">Search</button>
                </div>*@
            </div>

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Customer Code</th>
                        <th>Full Name</th>
                        <th>Customer Group</th>
                        <th>Is Active</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="customer in vm.customers">
                        <td>{{customer.customerCode}}</td>
                        <td>{{customer.fullName}}</td>
                        <td>{{customer.customerGroup}}</td>
                        <td>{{customer.isActive}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
