<div>
    <div class="row">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">General</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-sm-2">Customer Code</div>
                        <div class="col-sm-10"><input type="text" class="form-control" name="CustomerCode" /></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">Full Name</div>
                        <div class="col-sm-10"><input type="text" class="form-control" name="FullName" /></div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-sm-2">Customer Group</div>
                        <div class="col-sm-10">
                            <select class="form-control select2" style="width: 100%;">
                                <option selected="selected">Group 1</option>
                                <option>Group 2</option>
                                <option>Group 3</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">Is Active</div>
                        <div class="col-sm-10"><input type="checkbox" class="checkbox-inline" name="IsActive" /></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">Phone</div>
                        <div class="col-sm-10"><input type="text" class="form-control" name="Phone" /></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">Email</div>
                        <div class="col-sm-10"><input type="email" class="form-control" name="Email" /></div>
                    </div>
                </div>
            </div>
        </div><hr />
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Contact</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-sm-4">First Name</div>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" name="FirstName" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Last Name</div>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" name="LastName" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-sm-4">Phone</div>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" name="ContactPhone" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Email</div>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" name="ContactEmail" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <div class="col-sm-9">
                    <input id="btnSave" class="btn btn-sm btn-primary btn-flat pull-left" type="submit" value="Save" />
                    <a href="#/customers" class="btn btn-sm btn-default btn-flat pull-left">Close</a>
                </div>

            </div>
        </div>
    </div>
</div>