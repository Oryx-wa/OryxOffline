<div ng-controller="app.views.items.index as vm">
    <div class="row">
        <div class="col-md-12">
            <button class="btn btn-danger pull-right" type="submit"><i class="fa fa-optin-monster"></i> Some Option</button>
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Filter <a class="btn btn-box-tool" href="#/items/newItem" title="Add new item"><i class="fa fa-plus"></i> Add New</a></h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="span12">
                            <form id="custom-search-form" class="form-search form-horizontal pull-right">
                                <div class="input-append span12">
                                    <input type="text" class="search-query mac-style" placeholder="Search">
                                    <button type="submit" class="btn"><i class="icon-search"></i></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                @*<div class="box-footer">
                        <button class="btn btn-info" type="submit">Search</button>
                    </div>*@
            </div>

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Item Code</th>
                        <th>Description</th>
                        <th>Item Group</th>
                        <th>Stock Qty</th>
                        <th>Unit Price</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in vm.items">
                        <td>{{item.itemCode}}
                            <input type="text" ng-show="item.showEdit" ng-model="item.itemCode" class="form-control" /></td>
                        <td>{{item.itemName}}
                            <input type="text" ng-show="item.showEdit" ng-model="item.itemName" class="form-control" /></td>
                        <td>{{item.itemGroup.name}}
                            <select class="form-control" ng-show="item.showEdit" ng-model="item.itemGroup.id" ng-options="itemGroup.id as itemGroup.name for itemGroup in vm.itemGroups" name="ItemGroupId" style="width: 100%;">
                            </select>
                        </td>
                        <td>{{item.quantityInStock}}
                            <input type="number" ng-show="item.showEdit" ng-model="item.quantityInStock" class="form-control" /></td>
                        <td>{{item.unitPrice}}
                            <input type="number" ng-show="item.showEdit" ng-model="item.unitPrice" class="form-control" /></td>
                        <td>
                            <span ng- ng-show="!item.showEdit" ng-click="toggleEdit(item)" class="glyphicon glyphicon-pencil"></span>
                            <span ng-show="item.showEdit" ng-click="vm.save(item)" class="glyphicon glyphicon-ok"></span><br />
                            <span ng-show="item.showEdit" ng-click="toggleEdit(item)" class="glyphicon glyphicon-ban-circle"></span>
                        </td>
                        <td><span class="glyphicon glyphicon-remove" ng-click="vm.delete(item)"></span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

